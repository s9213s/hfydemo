<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp10"
    android:background="@drawable/shape_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_Top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_shop_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp20"
            android:paddingTop="@dimen/dp10"
            android:paddingRight="@dimen/dp20"
            android:paddingBottom="@dimen/dp10"
            android:src="@drawable/shopcart_selected" />

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/shopcart_shop"
            android:drawablePadding="@dimen/dp5"
            android:paddingTop="@dimen/dp10"
            android:paddingBottom="@dimen/dp10"
            android:textColor="@color/black"
            android:textSize="@dimen/dp16"
            tools:text="宝儿家服装" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_cloth_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp20"
            android:paddingTop="@dimen/dp10"
            android:paddingRight="@dimen/dp20"
            android:paddingBottom="@dimen/dp10"
            android:src="@drawable/shopcart_selected" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/small_zwimg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp100"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_cloth_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:paddingLeft="@dimen/dp15"
                android:paddingRight="@dimen/dp15"
                android:textColor="@color/black"
                android:textSize="@dimen/dp14"
                tools:text="商品名称商品名称商品名称商商品名称商品名称商品名称品名称商品名称" />

            <TextView
                android:id="@+id/tv_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_cloth_name"
                android:ellipsize="end"
                android:lines="2"
                android:paddingLeft="@dimen/dp15"
                android:paddingTop="@dimen/dp10"
                android:paddingRight="@dimen/dp15"
                tools:text="黑色;XS" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:background="@color/color_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:gravity="right|center_vertical">

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_ff0101"
            android:textSize="@dimen/dp20"
            tools:text="￥ 79" />

        <ImageView
            android:id="@+id/img_cloth_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp20"
            android:src="@drawable/shopcart_minus_grey" />

        <TextView
            android:id="@+id/tv_cloth_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginRight="@dimen/dp5"
            android:background="@drawable/shopcart_add_btn"
            android:paddingLeft="@dimen/dp20"
            android:paddingTop="@dimen/dp2"
            android:paddingRight="@dimen/dp20"
            android:paddingBottom="@dimen/dp2"
            android:text="1" />

        <ImageView
            android:id="@+id/img_cloth_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp20"
            android:src="@drawable/shopcart_add_red" />

    </LinearLayout>
</LinearLayout>